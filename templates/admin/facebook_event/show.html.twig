{% extends 'base.html.twig' %}

{% block title %}{% trans %}event.details{% endtrans %}: {{ facebook_event.name }}{% endblock %}

{% block body %}
    <section>
        <twig:Title:H1 >{% trans %}event.details{% endtrans %}</twig:Title:H1>
        <div class="w-full flex flex-col space-y-8 mb-8">
            <div class="w-full flex flex-col md:flex-row md:space-x-8">
                <div class="w-full md:w-1/3 md:text-right">
                    {% trans %}text.name{% endtrans %}
                </div>
                <div class="w-full md:w-2/3 md:text-left font-semibold">
                    {{ facebook_event.name }}
                </div>
            </div>
            <div class="w-full flex flex-col md:flex-row md:space-x-8">
                <div class="w-full md:w-1/3 md:text-right">
                    {% trans %}text.date{% endtrans %}
                </div>
                <div class="w-full md:w-2/3 md:text-left font-semibold">
                    {{ facebook_event.date ? facebook_event.date|date('Y-m-d H:i:s') : '' }}
                </div>
            </div>
            <div class="w-full flex flex-col md:flex-row md:space-x-8">
                <div class="w-full md:w-1/3 md:text-right">
                    {% trans %}text.link{% endtrans %}
                </div>
                <div class="w-full md:w-2/3 md:text-left font-semibold">
                    {{ facebook_event.facebookLink }}
                </div>
            </div>
        </div>
        <a class="text-white bg-content-secondary/90 hover:bg-content-secondary/90 focus:outline-none focus:ring-4 focus:ring-content-secondary/30 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-content-secondary/70 dark:hover:bg-content-secondary/80 dark:focus:ring-content-secondary/90 md:ml-[33%] mt-8"
           href="{{ path('admin_facebook_event_index') }}">{% trans %}button.back_list{% endtrans %}</a>

        <a class="text-white bg-content-secondary/90 hover:bg-content-secondary/90 focus:outline-none focus:ring-4 focus:ring-content-secondary/30 font-medium rounded-full text-sm px-5 py-2.5 text-center me-2 mb-2 dark:bg-content-secondary/70 dark:hover:bg-content-secondary/80 dark:focus:ring-content-secondary/90 md:ml-[33%] mt-8"
           href="{{ path('admin_facebook_event_edit', {'slug': facebook_event.slug}) }}">{% trans %}button.edit{% endtrans %}</a>

        {{ include('admin/facebook_event/_delete_form.html.twig') }}
    </section>
{% endblock %}
