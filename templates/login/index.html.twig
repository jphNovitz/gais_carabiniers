{# templates/login/index.html.twig #}
{% extends 'base.html.twig' %}


{% block body %}
    <div class="my-16 p-16 m-auto w-ful md:max-w-96 bg-light-neutral/50 dark:bg-dark-neutral/50 border border-light-text-base dark:border-dark-text-base">
        <h1>{% trans %}title.login{% endtrans %}</h1>
        {% if error %}
            <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
        {% endif %}

        <form action="{{ path('app_login') }}" method="post" class="flex flex-col  space-y-8">

            {#            <div class="w-full flex justify-between"> #}
            <label for="email">{% trans %}form.email{% endtrans %}:</label>
            <input type="text" id="email" name="_username" value="{{ email }}">
            {#            </div> #}

            <label for="password">{% trans %}form.password{% endtrans %}:</label>
            <input type="password" id="password" name="_password">

            {# If you want to control the URL the user is redirected to on success
        <input type="hidden" name="_target_path" value="/account"> #}

            <button type="submit" class="bg-light-primary dark:bg-dark-primary text-light-neutral dark:text-light-neutral py-2 my-4">
                {% trans %}button.login{% endtrans %}
            </button>
        </form>

        <a href="{{ path('app_register') }}" class="hover:underline">
            {% trans %}button.register{% endtrans %}
        </a>
    </div>
{% endblock %}