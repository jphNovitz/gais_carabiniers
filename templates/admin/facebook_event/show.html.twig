{% extends 'base.html.twig' %}

{% block title %}FacebookEvent{% endblock %}

{% block body %}
    <h1>FacebookEvent</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facebook_event.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ facebook_event.name }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ facebook_event.date ? facebook_event.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>FacebookLink</th>
                <td>{{ facebook_event.facebookLink }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ facebook_event.createdAt ? facebook_event.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ facebook_event.updatedAt ? facebook_event.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('admin_facebook_event_index') }}">back to list</a>

    <a href="{{ path('admin_facebook_event_edit', {'slug': facebook_event.slug}) }}">edit</a>

    {{ include('admin/facebook_event/_delete_form.html.twig') }}
{% endblock %}
